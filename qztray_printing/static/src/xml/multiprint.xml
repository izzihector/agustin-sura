<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
  <t t-name="Comandas">
    <div style="width: 74mm;">
      <div size='normal' ><t t-esc="changes.name" /></div>
            <t t-if="changes.floor || changes.table">
                <br />
                <div><span><t t-esc="changes.floor" /></span> / <span bold='on' size='double'><t t-esc="changes.table"/></span></div>
            </t>
            <t t-if="changes.cashier_name">
                <span>Mesero: <t t-esc="changes.cashier_name"/></span>
            </t>
            <br />
            <br />
            <t t-if="changes.cancelled.length > 0">
                <div color='red'>
                    <div bold='on' size='double'>CANCELADO <span bold='off' size='double-height'><t t-esc='changes.time.hours' />:<t t-esc='changes.time.minutes' /></span> </div>
                    <br />
                    <br />
                    <t t-foreach="changes.cancelled" t-as="change">
                        <div style="display: flex;">
                            <div style="flex-basis: 10%; text-align: left;"><t t-esc="change.qty" /></div>
                            <div style="flex-basis: 90%; text-align: right;"><t t-esc="change.name_wrapped[0]" /></div>
                        </div>
                        <t t-call="NameWrapped"/>
                        <t t-if="change.note">
                            <line>
                                <div>NOTA</div>
                                <div>...</div>
                            </line>
                            <div><span font='b' bold='off' line-ratio='0.4' indent='1' width='30'>--- <t t-esc="change.note" /></span></div>
                            <line></line>
                        </t>
                    </t>
                    <br />
                    <br />
                </div>
            </t>
            <t t-if="changes.new.length > 0">
                <div bold='on' size='double'>NUEVO <span bold='off' size='double-height'><t t-esc='changes.time.hours' />:<t t-esc='changes.time.minutes' /></span> </div>
                <br />
                <br />
                <t t-foreach="changes.new" t-as="change">
                    <div style="display: flex;">
                        <div style="flex-basis: 10%; text-align: left;"><t t-esc="change.qty" /></div>
                        <div style="flex-basis: 90%; text-align: right;"><t t-esc="change.name_wrapped[0]" /></div>
                    </div>
                    <t t-call="NameWrapped"/>
                    <t t-if="change.note">
                        <div style="display: flex;">
                            <div>NOTE</div>
                            <div>...</div>
                        </div>
                        <div><span font='b' bold='off' line-ratio='0.4' indent='1' width='30'>--- <t t-esc="change.note" /></span></div>
                        
                    </t>
                </t>
                <br />
                <br />
                <hr/>
            </t>
    </div>
  </t>
</templates>