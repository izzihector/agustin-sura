<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="saldo" model="ir.ui.view">
        <field name="name">saldo.view.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" domain="[('saldo', '>', '0')]"/>
                <field name="saldo" sum="saldo" /> 
            </tree>
        </field>
    </record>

    <record id="saldo_action2" model="ir.actions.act_window">
        <field name="name">saldo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="saldo"/>
        
    </record>
    <record id="view_res_partner_inherit_form" model="ir.ui.view">
            <field name="name">view.res.partner.inherit.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//ul" position="inside">
                    <field name="saldo" string="Saldo"/>                        
                </xpath>
            </field>
    </record>


    
        

    <menuitem id="saldo_menu"
        name="saldo"
        parent="account.account_reports_management_menu"
        action="saldo_action2"/>
</odoo>